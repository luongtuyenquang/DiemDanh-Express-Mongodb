<% if(act.length > 0) { %>
<% var l=act.length; %>
<b>Tìm thấy <%- l %> hoạt động điểm danh phù hợp</b>
<div class="table-responsive">
  <table class="table text-center table-bordered table-hover">
    <thead>
      <tr class="d-flex">
        <th class="col-1">STT</th>
        <th class="col-2">Tên hoạt động</th>
        <th class="col-2">Tham dự</th>
        <th class="col-2">Điểm danh</th>
        <th class="col-2"> Hết hạn</th>
        <th class="col-2" colspan="4">Thao tác</th>
      </tr>
    </thead>
    <tbody>
      
      <% for(var i=0;i<l;i++){ %>
      <tr class="d-flex <% if(!act[i].isHaveFile) { %>alert-danger<% } %>">
        <th class="col-1"><%- i+1 %> </th>
        <th class="col-2"><%- act[i].TenSuKien %></th>
        <th class="col-2"><%- listStudent.length  %></th>
        <th class="col-2"><%-  %> / <%-listStudent.length  %></th>
        <th class="col-2"><%-act[i].ThoiGian.getHours() %>:<%-act[i].ThoiGian.getMinutes() %>  <%-act[i].ThoiGian.getDate() %>-<%-act[i].ThoiGian.getMonth() + 1 %>-<%-act[i].ThoiGian.getFullYear() %>  </th>
        <th class="col-1"><i class="fas fa-eye text-primary" data-toggle="modal" data-target="#viewActModal" onclick="AJAX_viewActModal('<%- act[i].IDHoatDong %>')"></i></th>
        <th class="col-1"><i class="fas fa-edit text-success" data-toggle="modal" data-target="#editActModal" onclick="AJAX_editActModal('<%- act[i].IDHoatDong %>')"></i></th>
        <th class="col-1"><i class="fas fa-trash-alt text-danger" data-toggle="modal" data-target="#delActModal" onclick="authenticateDelAct('<%- act[i].IDHoatDong %>')"></i></th>
      </tr>
      <% } %>
      
    </tbody>
  </table>
</div>
<% } else { %>
<b>Bạn chưa có hoạt động nào!</b><br>
<% } %>